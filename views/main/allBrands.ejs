<body>
    <section class="all-brand-section width">
        <h1 class="text-4xl font-semibold text-white mt-8 mb-16">Find Your <span class="text-black font-black">Favorite Brand</span> Instantly <span id="scroll-down" class="font-medium text-black hidden">(scroll down &darr;&darr;&darr;)</span></h1>

        <div class="all-brand grid grid-cols-9 gap-4 pb-28">
            <% const brands = [
                { id: 'nissan', name: 'Nissan', logo: '/images/brands_logo/nissan_new.svg' },
                { id: 'toyota', name: 'Toyota', logo: '/images/brands_logo/toyota_new.svg' },
                { id: 'lexus', name: 'Lexus', logo: '/images/brands_logo/Lexus-logo.svg' },
                { id: 'landrover', name: 'Land Rover', logo: '/images/brands_logo/land-rover.webp' },
                { id: 'subaru', name: 'Subaru', logo: '/images/brands_logo/subaru.webp' },
                { id: 'bentley', name: 'Bentley', logo: '/images/brands_logo/Bentley.svg' },
                { id: 'tata', name: 'Tata', logo: '/images/brands_logo/Tata.svg' },
                { id: 'morrisgarage', name: 'Morris Garage', logo: '/images/brands_logo/Morris-Garage.svg' },
                { id: 'bmw', name: 'BMW', logo: '/images/brands_logo/bmw_new.svg' },
                { id: 'mercedes', name: 'Mercedes', logo: '/images/brands_logo/mercedes-benz-logo-190x132_nVwdfnd.svg' },
                { id: 'volvo', name: 'Volvo', logo: '/images/brands_logo/unnamed2_NUNQj6u.svg' },
                { id: 'mazda', name: 'Mazda', logo: '/images/brands_logo/mazda_new.svg' },
                { id: 'volkswagen', name: 'Volkswagen', logo: '/images/brands_logo/unnamed1_SdnThCn.svg' },
                { id: 'ford', name: 'Ford', logo: '/images/brands_logo/ford_new.svg' },
                { id: 'audi', name: 'Audi', logo: '/images/brands_logo/audi-logo.svg' },
                { id: 'kia', name: 'KIA', logo: '/images/brands_logo/KIA.svg' },
                { id: 'hyundai', name: 'Hyundai', logo: '/images/brands_logo/unnamed.svg' },
                { id: 'honda', name: 'Honda', logo: '/images/brands_logo/honda_new.svg' },
                { id: 'mitsubishi', name: 'Mitsubishi', logo: '/images/brands_logo/Mitsubishi.svg' },
                { id: 'tesla', name: 'Tesla', logo: '/images/brands_logo/Tesla.svg' },
                { id: 'dfsk', name: 'DFSK', logo: '/images/brands_logo/DFSK.svg' },
                { id: 'jaguar', name: 'Jaguar', logo: '/images/brands_logo/Jaguar.svg' },
                { id: 'fiat', name: 'Fiat', logo: '/images/brands_logo/Fiat.svg' },
                { id: 'haval', name: 'Haval', logo: '/images/brands_logo/Haval.svg' },
                { id: 'alfaromeo', name: 'Alfa Romeo', logo: '/images/brands_logo/AlfaRomeo.svg' },
                { id: 'renault', name: 'Renault', logo: '/images/brands_logo/RENAULT.svg' },
                { id: 'peugeot', name: 'Peugeot', logo: '/images/brands_logo/PEUGEOT.svg' },
                { id: 'porsche', name: 'Porsche', logo: '/images/brands_logo/Porsche.svg' },
                { id: 'infiniti', name: 'Infiniti', logo: '/images/brands_logo/INFINITI.svg' },
                { id: 'daihatsu', name: 'Daihatsu', logo: '/images/brands_logo/DAIHATSU_yVgWmes.svg' },
                { id: 'suzuki', name: 'Suzuki', logo: '/images/brands_logo/Suzuki_7Q9rLx1.svg' },
