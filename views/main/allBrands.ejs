                { id: 'mahindra', name: 'Mahindra', logo: '/images/brands_logo/Mahindra.svg' }
            ]; %>

            <% brands.forEach(brand => { %>
                <div id="<%= brand.id %>">
                    <div class="w-[60px] h-[50px] overflow-hidden">
                        <img class="h-full w-full" src="<%= brand.logo %>" alt="">
                    </div>
                    <p><%= brand.name %></p>
                </div>
            <% }); %>
        </div>
    </section>

    <section id="all-brand-section-card" class="all-brand-section hidden width">
        <h1 class="text-4xl font-semibold text-white flex items-center gap-4">Result For: <span id="result-for" class="text-black font-black"></span></h1>
        <h1 class="text-xl font-bold text-white mt-8 mb-20 flex items-center">Cars That Match Your Selection: &nbsp;<span id="car-count" class="text-black text-3xl font-mono font-semibold"></span></h1>

        <section class="width pb-40">
            <div id="loading-indicator" class="flex justify-center items-center mb-4 hidden">
                <svg class="animate-spin h-8 w-8 text-orange-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v8H4z"></path>
                </svg>
                <span class="ml-2 text-white">Loading...</span>
            </div>

            <div id="card-div" class="h-auto grid grid-cols-4 gap-4 mb-20"></div>

            <div class="text-center">
                <a class="view-all text-xl text-[#f7c6d5] underline font-semibold" href="/allCollections">View All Cars&nbsp; &#8594;</a>
            </div>
        </section>
    </section>
</body>
